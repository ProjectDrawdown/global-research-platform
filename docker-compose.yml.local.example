version: '3'

services:
  redis:
    image: redis
    ports:
      - "6379:6379"
  db:
    image: postgres:12
    environment:
      POSTGRES_HOST_AUTH_METHOD: trust
      POSTGRES_DB: drawdown
    volumes:
      - pgdata:/var/lib/postgresql/data/
    ports:
      - "5432:5432"
  service:
    build:
      context: ./service
    ports:
      - "8000:8000"
    volumes:
      - ./service:/app
    environment:
      - DATABASE_URL=postgresql://postgres:postgres@db/drawdown
      - API_URL=http://localhost:8000
      - JWT_SECRET_KEY=somejwtsecretkey
      - CLIENT_URL=http://localhost:3000
      - AUTH_REDIRECT_URL=http://localhost:3000
      - JWT_ALGORITHM=HS256
      - GITHUB_DOMAIN=github.com
      - GITHUB_CLIENT_ID=somegithubclientid
      - GITHUB_CLIENT_SECRET=somegihubclientsecret
      - GITHUB_USER_URL=https://api.github.com/user
      - GOOGLE_DOMAIN=accounts.google.com
      - GOOGLE_CLIENT_ID=773030908660-lgrmt2lh0biodt8hmpmj8prp93s29aem.apps.googleusercontent.com
      - GOOGLE_CLIENT_SECRET=JalFQxsWCNbqByYVp7Jy7xgl
      - MAX_VARIATIONS_PER_WORKBOOK=1000
      - REDIS_URL=redis://redis
      - MAX_WORKERS=4
      - INPUT_LOGS=false
    depends_on:
      - db
      - redis
  web:
    build:
      context: ./web
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=development
      - CHOKIDAR_USEPOLLING=true
    volumes:
      - ./web:/app
      - /app/node_modules
    depends_on:
      - service

volumes:
  pgdata:
